<odoo>

    <!-- creo una scheduled action -->
    <record id="ir_cron_export_hours_to_pwork" model="ir.cron">
        <field name="name">Update token Pwork</field>
        <field name="model_id" ref="model_gtms_trip"/>
        <field name="state">code</field>
        <field name="code">model.get_token_from_pwork() </field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall">False</field>
        <field name="active" eval="True"/>

</odoo>